<h1>Transactions</h1>

<table>
  <tr>
    <th>Merchant ID</th>
    <th>Tag ID</th>
    <th>Transaction Amount</th>
    <th>Transaction Date</th>
  </tr>


  <% for transaction in @transactions %>
  <tr>
    <td><a href="/transactions/<%= transaction.id %>"><%= transaction.merchant_id %></a></td>
    <td><a href="/transactions/<%= transaction.id %>"><%= transaction.tag_id %></td>
      <td><a href="/transactions/<%= transaction.id %>"> £<%= "%.2f" %transaction.transaction_amount %></td>
        <td><a href="/transactions/<%= transaction.id %>"> <%= transaction.transaction_date %></td>
        </tr>
        <% end %>
        <tr>
          <td>
            <p>The total value of all your transactions is £<%= @total %></p>
          </td>
        </tr>
        

      </table>


      <a href="/transactions/new">Add New Transaction</a>


      <form action="/transactions/<%= transaction.id %>/delete" method="post">
        <input type="submit" value="Delete Transaction" />
        </form
