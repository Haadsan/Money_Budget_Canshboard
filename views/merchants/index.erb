<h1>Manage Your Merchants</h1>

<a class="add-merchant" href="/merchants/new">Create Merchant</a>
<table>

  <% for merchant in @merchants %>
  <tr>
    <td><a class="merchant-name"  href="/merchants/<%=merchant.id %>"><%= merchant.merchant_name %></a></td>
    <td>

      <form method="get" action="/merchants/<%= merchant.id %>/edit">
        <input type="submit" value="Edit Merchant">
      </form>


      <form action="/merchants/<%= merchant.id %>/delete" method="post">
        <input type="submit" value="Delete" />
      </form>


    </tr>
    <% end %>

  </table>
